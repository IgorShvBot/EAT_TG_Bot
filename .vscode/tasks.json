{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Stop Bot",
			"type": "shell",
			"command": "docker compose stop telegram-bot",
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Start Bot (with rebuild)",
			"type": "shell",
			"command": "docker compose up --build -d telegram-bot",
			"presentation": {
				"reveal": "always"
			}
		}
	]
}